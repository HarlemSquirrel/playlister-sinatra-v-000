<h1>Create a New Song</h1>
<form class="create_song" action="/songs" method="post">
  <label for="song_name">Name</label>
  <input id="Name" type="text" name="song_name" placeholder="Name">
  <label for="artist_name">Artist Name</label>
  <input id="Artist Name" type="text" name="artist_name" placeholder="Artist Name:">
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>
  <input type="submit" name="submit" value="Create">
</form>
